@model Labb3_DriverInformationSystem.Models.Driver

<h2>Redigera Förare</h2>

<form asp-action="Edit" method="post" class="container">
    <input type="hidden" asp-for="DriverId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">Namn</label>
        <input asp-for="Name" class="form-control" placeholder="Ange förarens namn" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="LicenseNumber" class="control-label">Körkortsnummer</label>
        <input asp-for="LicenseNumber" class="form-control" placeholder="Ange körkortsnummer" />
        <span asp-validation-for="LicenseNumber" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="PhoneNumber" class="control-label">Telefonnummer</label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Ange telefonnummer" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="Salary" class="control-label">Lön</label>
        <input asp-for="Salary" class="form-control" placeholder="Ange lön" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="EmployeeId" class="control-label">Ansvarig Person</label>
        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeList"></select>
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <input type="submit" value="Spara" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Tillbaka till listan</a>
    </div>
</form>
