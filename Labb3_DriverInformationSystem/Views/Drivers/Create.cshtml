@model Labb3_DriverInformationSystem.Models.Driver

<form asp-action="Create" class="container">
    <div class="form-group">
        <label for="Name">Namn</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Ange förarens namn" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label for="LicenseNumber">Körkortsnummer</label>
        <input type="text" asp-for="LicenseNumber" class="form-control" placeholder="Ange körkortsnummer" />
        <span asp-validation-for="LicenseNumber" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label for="PhoneNumber">Telefonnummer</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Ange telefonnummer" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label for="Salary">Lön</label>
        <input type="number" asp-for="Salary" class="form-control" placeholder="Ange lön" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label for="EmployeeId">Ansvarig person</label>
        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeList"></select>
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-4">Skapa</button>
    <a asp-action="Index" class="btn btn-secondary mt-4">Tillbaka till listan</a>
</form>
