@model IEnumerable<Labb3_DriverInformationSystem.Models.Employee>

<div class="container">
    <h2>Anställda</h2>
    <p>
        <a asp-action="Create" class="btn btn-success">Skapa ny</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Namn</th>
                <th>Telefonnummer</th>
                <th>Anställningsdatum</th>
                <th>E-post</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Phonenumber</td>
                    <td>@employee.DateOfHire.ToString("yyyy-MM-dd")</td>
                    <td>@employee.IdentityUser?.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-primary btn-sm">Redigera</a> |
                        <a asp-action="Details" asp-route-id="@employee.EmployeeId" class="btn btn-info btn-sm">Detaljer</a> |
                        <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-danger btn-sm">Ta bort</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
