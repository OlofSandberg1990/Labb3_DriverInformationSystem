@model Labb3_DriverInformationSystem.Models.Event

@{
    ViewData["Title"] = "Redigera";
}

<h1>Redigera Händelse</h1>

<div class="container">
    <h4>Händelseinformation</h4>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="EventId" />
        <div class="form-group">
            <label asp-for="Title" class="control-label">Titel</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Description" class="control-label">Beskrivning</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="EventDate" class="control-label">Datum</label>
            <input asp-for="EventDate" class="form-control" />
            <span asp-validation-for="EventDate" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Income" class="control-label">Inkomst</label>
            <input asp-for="Income" class="form-control" />
            <span asp-validation-for="Income" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Expense" class="control-label">Kostnad</label>
            <input asp-for="Expense" class="form-control" />
            <span asp-validation-for="Expense" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="DriverId" class="control-label">Förare</label>
            <select asp-for="DriverId" class="form-control" asp-items="ViewBag.DriverId"></select>
            <span asp-validation-for="DriverId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Spara</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary mt-3">Tillbaka till listan</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
