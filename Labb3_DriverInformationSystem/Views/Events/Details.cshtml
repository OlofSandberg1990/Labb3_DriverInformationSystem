@model Labb3_DriverInformationSystem.Models.Event

@{
    ViewData["Title"] = "Detaljer";
}

<h1>Detaljer</h1>

<div class="container">
    <h4>Händelseinformation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Titel</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

        <dt class="col-sm-2">Beskrivning</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-2">Datum</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EventDate)</dd>

        <dt class="col-sm-2">Inkomst</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Income)</dd>

        <dt class="col-sm-2">Kostnad</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Expense)</dd>

        <dt class="col-sm-2">Förare</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Driver.Name)</dd>
    </dl>

    <div>
        <a asp-action="Edit" asp-route-id="@Model?.EventId" class="btn btn-warning">Redigera</a>
        <a asp-action="Index" class="btn btn-secondary">Tillbaka till lista</a>
    </div>
</div>
